# Application Configuration
APP_NAME="Invoice & Receipt Processor"
APP_VERSION="2.0.0"
DEBUG=False
TESTING=False
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Database Configuration
# For PostgreSQL (Production)
DATABASE_URL=postgresql://invoices:invoices@localhost:5432/invoices
# For SQLite (Development)
# DATABASE_URL=sqlite:///./invoices.db
DATABASE_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
ALGORITHM=HS256

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# File Upload Configuration
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable
OCR_TIMEOUT=30
DEFAULT_OCR_LANGUAGE=eng

# Currency Configuration
BASE_CURRENCY=USD
EXCHANGE_RATE_API_KEY=  # Optional: for live exchange rates

# Email Processing (Optional)
EMAIL_ENABLED=False
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993
EMAIL_USE_SSL=True
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Cloud OCR (Optional - for better accuracy)
GOOGLE_CLOUD_VISION_ENABLED=False
GOOGLE_CLOUD_CREDENTIALS=/path/to/credentials.json
AZURE_FORM_RECOGNIZER_ENABLED=False
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-key-here

# Monitoring & Observability (Optional)
SENTRY_DSN=  # Sentry error tracking
PROMETHEUS_ENABLED=False

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
